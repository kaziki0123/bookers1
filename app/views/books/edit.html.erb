<h1>編集画面</h1>
<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>  
  <%= link_to "show", "/books/#{@book.id}" %>
  <%= link_to "back", "/books" %>  
<% end %>